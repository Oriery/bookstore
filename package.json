{
  "name": "bookstore",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^14"
  },
  "dependencies": {
    "@sap/audit-logging": "latest",
    "@sap/cds": ">=5",
    "@sap/xssec": "latest",
    "express": "^4",
    "hdb": "latest",
    "npm": "^8.15.1",
    "passport": "latest"
  },
  "devDependencies": {
    "eslint": "^8.21.0",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run",
    "tohana": "npm install -g npm@8.15.1 && CDS_ENV=production mbt build && cf deploy mta_archives/bookstore_1.0.0.mtar",
    "lint": "npx eslint srv/ --fix"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "[production].credentials": {
          "destination": "test"
        }
      },
      "[production]": {
        "db": {
          "model": [
            "db",
            "srv"
          ],
          "kind": "hana-cloud"
        }
      }
    }
  }
}
