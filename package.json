{
  "name": "bookstore",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^14"
  },
  "dependencies": {
    "@sap/cds": ">=5",
    "express": "^4",
    "npm": "^8.15.0",
    "hdb": "^0.19.0",
    "passport": "latest",
    "@sap/xssec": "latest",
    "@sap/audit-logging": "latest"
  },
  "devDependencies": {
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run",
    "tohana": "CDS_ENV=production mbt build && cf deploy mta_archives/bookstore_1.0.0.mtar"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "_comment": "// TODO. Now credentials is switched off in order to mock external service",
        "--credentials": { 
            "destination": "test",
            "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
        }
      },
      "[production]": {
          "db": { 
            "model": [ 
              "db", 
              "srv" 
            ],
            "kind": "hana-cloud"
          }
      }
    }
  }
}